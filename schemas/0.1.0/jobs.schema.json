{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "/schemas/0.1.0/jobs",
    "title": "jobs.json",
    "description": "This file is automatically maintained.  You should not need to edit it.",
    "type": "object",
    "required": [
        "$schema"
    ],
    "additionalProperties": false,
    "patternProperties": {
        ".+\\.txt$": {
            "description": "An output generated by a Boa query.",
            "type": "object",
            "required": [
                "job",
                "sha256"
            ],
            "additionalProperties": false,
            "properties": {
                "job": {
                    "description": "The Boa job number.",
                    "type": "number"
                },
                "sha256": {
                    "description": "A hash of the fully substituted query, used for caching.",
                    "type": "string",
                    "pattern": "^[a-z0-9]+$",
                    "minLength": 64,
                    "maxLength": 64
                }
            }
        }
    },
    "properties": {
        "$schema": {
            "description": "jobs JSON schema",
            "type": "string",
            "pattern": "^schemas/\\d+\\.\\d+\\.\\d+/jobs.schema.json$"
        }
    }
}